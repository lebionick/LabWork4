<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="8"
        android:id="@+id/text_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="@string/text_name"
        android:layout_marginTop="46dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="@string/text_surname"
        android:id="@+id/text_surname"
        android:layout_alignTop="@+id/text_name"
        android:layout_toEndOf="@+id/text_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/text_age"
        android:hint="@string/text_age"
        android:layout_below="@+id/text_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_toStartOf="@+id/text_surname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/text_grade"
        android:hint="@string/text_grade"
        android:layout_alignTop="@+id/text_age"
        android:layout_toEndOf="@+id/text_age" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:id="@+id/button_cancel"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="45dp"
        android:layout_below="@+id/text_age"
        android:layout_alignParentStart="true"
        android:background="#ff7972" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/button_add"
        android:layout_alignTop="@+id/button_cancel"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"
        android:background="#74dba4" />
</RelativeLayout>